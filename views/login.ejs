<% include ./partials/header.ejs %>

  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-6">
          <img src="images/mauricio-fanfa-68657_small.jpg" class="img-rounded img-responsive">
        </div>
        <div class="col-sm-12 col-md-6">
          <h1>stashy <small>all the fiber</small></h1>
          <h3>Sign in!</h3>
          <blockquote id="weather">
            <!-- personalized weather here -->
          </blockquote>

          <!-- display any login error messages here -->          
          <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
          <% } %>

          <!-- basic login form - email and password -->
          <form method="post" action="/login">
            <div class="form-group">
              <label for="email">Email</label>
              <input class="form-control" type="text" name="email" id="email" autofocus required>
            </div>

            <div class="form-group">
              <label for="email">Password</label>
              <input class="form-control" type="password" name="password" id="password" required>
            </div>

            <input class="btn btn-primary btn-block btn-lg active" type="submit" value="sign in!">
          </form>
       </div>
      </div>
    </div>
  </div>

  <script src="scripts/authPage.js"></script>

<% include ./partials/footer.ejs %>